UCHAR gui_0204_ctl;							/* For state 0204 Control information	  	*/
UCHAR gui_0204_num;							/* For state 0204 VCOMP & JE trial time     */
UCHAR gui_0204_ok;							/* For state 0204 VCOMP & JE successful time*/
