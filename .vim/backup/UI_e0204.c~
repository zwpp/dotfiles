	(void *)ui_exec01_0204	,		/* Command 01 Key push down notice			*/
	(void *)ui_exec_nop		,		/* Command 03 Radio startup confirmation    */
	(void *)ui_exec_nop				/* Command 08 E2P all readout response		*/
