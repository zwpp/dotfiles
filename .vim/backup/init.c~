void sys_hdwini(void)
{
   outp(0xFF,DDRB);         	   	/* use all pins on PortB for output					*/
   outp(0xFF,PORTB);   	   			/* PORT B INITIAL 									*/
   outp(0x7F,DDRC);           	   	/* use all pins on PortC for output 				*/
   outp(0x0F,PORTC);      	   		/* PORT C INITIAL 									*/
   outp(0xF8,DDRD);
   outp(0xF0,PORTD);          		/* PORT D INITIAL 									*/
}

